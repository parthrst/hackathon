<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepairOrder1"
    >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:gravity="center_horizontal"
     android:orientation="vertical"
     android:id="@+id/start"
     >
     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Place Repair"
         android:background="@color/colorBlack"
         android:textColor="#FFFFFF"
         android:fontFamily="@font/avenirheavy"
         android:textSize="22.8sp"
         android:id="@+id/place"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:onClick="placeOrder"
         />
     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="View Repairs"
         android:background="@color/colorBlack"
         android:textColor="#FFFFFF"
         android:layout_marginTop="15dp"
         android:fontFamily="@font/avenirheavy"
         android:textSize="22.8sp"
         android:id="@+id/view"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:onClick="viewOrder"/>
 </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/progressbar_layout"
        android:background="@drawable/myrect"
        android:elevation="5dp">

        <ProgressBar
            android:id="@+id/loader"
            android:layout_marginEnd="5dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:theme="@style/AppTheme"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/loading_msg"
            android:fontFamily="@font/avenirlight"
            android:textSize="15.311sp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:id="@+id/next"
    android:visibility="invisible"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_repair_background"
        android:orientation="vertical"
        android:layout_margin="15dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#0d0101"
        android:lineSpacingExtra="8.24sp"
        android:gravity="center_horizontal"
        android:text="Select Gadget:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:fontFamily="@font/averin"

        />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/device"
    android:textSize="21sp"
    android:textColor="#0d0101"
    android:fontFamily="@font/avenirlight"
    app:fontFamily="@font/avenirlight"
    app:hintText="Device"
    />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_repair_background"
        android:orientation="vertical"
        android:layout_margin="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#0d0101"
            android:lineSpacingExtra="8.24sp"
            android:gravity="center_horizontal"
            android:text="Select Brand:"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:fontFamily="@font/averin"

            />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spinner_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
         android:layout_marginTop="10dp"
        android:textSize="21sp"
        android:textColor="#0d0101"
        android:fontFamily="@font/avenirlight"
        app:hintText="Brand"
        app:fontFamily="@font/avenirlight"

        />
    </LinearLayout>
    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:visibility="gone"
        android:id="@+id/progBar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_repair_background"
        android:orientation="vertical"
        android:layout_margin="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#0d0101"
            android:lineSpacingExtra="8.24sp"
            android:gravity="center_horizontal"
            android:text="Select Model:"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:fontFamily="@font/averin"

            />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/mobile_spinner_seriesSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="21sp"
        android:textColor="#0d0101"
        android:lineSpacingExtra="6.867sp"
        android:fontFamily="@font/avenirlight"
        app:hintText="Model"
        app:fontFamily="@font/avenirlight"
        android:layout_marginTop="10dp"
        />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/laptop_spinner_seriesSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="21sp"
        android:textColor="#0d0101"
        android:lineSpacingExtra="6.867sp"
        android:fontFamily="@font/avenirlight"
        app:hintText="Model"
        app:fontFamily="@font/avenirlight"
        android:layout_marginTop="10dp"
        />
    </LinearLayout>

</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:textColor="#FFFFFF"
        android:onClick="OrderRepair"
        android:text="CONTINUE"
        android:id="@+id/order_repair_but"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/avenirheavy"
        android:textSize="22.8sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        />
    </RelativeLayout>


