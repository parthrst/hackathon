<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bucket">
    <LinearLayout

        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/progressbar"
        android:background="@drawable/myrect"
        android:elevation="5dp">

        <ProgressBar
            android:id="@+id/loader"
            android:layout_marginEnd="5dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:theme="@style/AppTheme"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/loading"
            android:fontFamily="@font/avenirlight"
            android:textSize="15.311sp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/orderplace"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/emptyText"
            android:fontFamily="@font/avenirlight"
            android:textSize="25.311sp"
            android:layout_height="wrap_content"
            android:text="You don't have any orders yet!!"
            />

    </LinearLayout>
    <ExpandableListView
        android:id="@+id/exp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:childDivider="#666666"
        android:divider="#000000"
        android:dividerHeight="2dp"
        android:visibility="invisible"
        android:indicatorRight="@dimen/fab_elevation_lollipop"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:textColor="#FFFFFF"
        android:text="Request Repair"
        android:id="@+id/order_repair_but"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/avenirheavy"
        android:textSize="22.8sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:onClick="repairOrder"
        />
</RelativeLayout>